<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.isa.expensetracker.ui.ExpenseFormController"
      spacing="24">

    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <!-- Header -->
    <Label text="Add New Expense" styleClass="h1"/>

    <!-- Form Card -->
    <VBox styleClass="dashboard-card" spacing="20">
        <GridPane hgap="12" vgap="14" styleClass="form-grid">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
            </columnConstraints>

            <Label text="Category:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbCategory" maxWidth="Infinity" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="tfAmount" promptText="0.00" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dpDate" maxWidth="Infinity" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Merchant:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="tfMerchant" promptText="(Optional)" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Note:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextArea fx:id="taNote" prefRowCount="3" promptText="(Optional)" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="12" alignment="CENTER_LEFT">
            <Button fx:id="btnSave" text="Save Expense" defaultButton="true"/>
            <Button fx:id="btnReset" text="Reset Form" cancelButton="true"/>
        </HBox>
    </VBox>
</VBox>
